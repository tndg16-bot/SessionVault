{
  "manifest_version": 3,
  "name": "SessionVault - AI Chat to Obsidian",
  "version": "1.0.0",
  "description": "Save AI chat conversations to Obsidian with summaries and Mermaid diagrams",
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "SessionVault"
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["*://chat.openai.com/*", "*://chatgpt.com/*"],
      "js": ["content/chatgpt.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://claude.ai/*"],
      "js": ["content/claude.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://gemini.google.com/*"],
      "js": ["content/gemini.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://aistudio.google.com/*"],
      "js": ["content/google-ai-studio.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://127.0.0.1:27123/*",
    "http://localhost:11434/*",
    "https://api.github.com/*",
    "https://github.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["lib/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
